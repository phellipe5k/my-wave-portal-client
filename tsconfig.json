{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "jsx": "preserve",
    "declarationDir": "dist",
    "baseUrl": "src",
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "files": [
    "src/my-wave-portal-my-wave-portal.tsx"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test*"
  ]
}
